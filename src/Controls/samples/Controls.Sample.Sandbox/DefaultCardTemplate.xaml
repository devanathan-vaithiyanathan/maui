<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
              x:Class="Maui.Controls.Sample.DefaultCardTemplate"
 xmlns:local="clr-namespace:Maui.Controls.Sample">

    <Border x:Name="border"
            Background="LightGreen"
            Stroke="LightGray">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="4" />
        </Border.StrokeShape>
        <Grid  RowDefinitions="Auto,Auto,Auto, Auto"
       ColumnDefinitions="*,Auto" 
       RowSpacing="4"
       Padding="16,0,0,0">

            <Label Grid.Row="0" Grid.Column="0" Padding="0, 16, 0, 0" x:Name="cardTitle"
           Text="Label Text" />

            <Border Grid.Row="0" Grid.Column="1"
                              HeightRequest="32" WidthRequest="32"                                       
                              Margin="0,12,12,0" StrokeThickness="5"
                    Stroke="Black">
                <Image Source="dotnet_bot.png" />
            </Border>

            <Label Grid.Row="1" Grid.ColumnSpan="2" x:Name="cardDescription"
           Text="Description" />

            <ScrollView Grid.Row="2" Grid.Column="0" Orientation="Horizontal"
                HorizontalScrollBarVisibility="Never" InputTransparent="True" 
                Padding="0,0,0,16" Background="Violet"> 
                <HorizontalStackLayout Spacing="4"
                                />
            </ScrollView>

            <Border Grid.RowSpan="3"
                                Grid.Column="1" 
                    Margin="10"
                                Background="Orange" >
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
            </Border>
        </Grid>
    </Border>

