<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.ModalPage"
             xmlns:vm="clr-namespace:Maui.Controls.Sample.ViewModels"
             Shell.PresentationMode="ModalAnimated"
             x:DataType="vm:ModalPageViewModel"
             Title="Modal Page">

    <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="ModalPage"/>
            <Button Text="Close Modal" Command="{Binding CloseModalAsyncCommand}"/>
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
