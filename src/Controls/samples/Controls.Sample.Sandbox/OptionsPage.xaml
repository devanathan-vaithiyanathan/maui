<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.OptionsPage"
             Title="Refresh Control Options">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Apply & Back"
                     Clicked="OnBackClicked"
                     AutomationId="ApplyButton"/>
    </ContentPage.ToolbarItems>
    
    <VerticalStackLayout Spacing="20"
                         Padding="20"
                         VerticalOptions="Center">
        
        <Label Text="{Binding IsRefreshing, StringFormat='Current IsRefreshing: {0}'}"
               FontSize="18"
               HorizontalOptions="Center"
               TextColor="Blue"
               AutomationId="CurrentStatusLabel"/>

        <Label Text="Set IsRefreshing to True, then go back to MainPage to see the refresh indicator"
               FontSize="14"
               HorizontalOptions="Center"
               TextColor="Gray"/>

        <Button Text="Set IsRefreshing = True"
                BackgroundColor="Green"
                TextColor="White"
                Clicked="OnSetTrueClicked"
                AutomationId="SetTrueButton"/>

        <Button Text="Set IsRefreshing = False"
                BackgroundColor="Red"
                TextColor="White"
                Clicked="OnSetFalseClicked"
                AutomationId="SetFalseButton"/>
    </VerticalStackLayout>
</ContentPage>
