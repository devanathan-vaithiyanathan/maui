<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Page1"
             xmlns:vm="clr-namespace:Maui.Controls.Sample.ViewModels"
             x:DataType="vm:Page1ViewModel"
             Title="Page 1">

       <ContentPage.Content>
        <VerticalStackLayout>
            <Label Text="Page1"/>
            <Button Text="Navigate to next page" Command="{Binding NavigateForwardAsyncCommand}"/>
            <Button Text="OpenModalPage" Command="{Binding OpenModalAsyncCommand}"/>
        </VerticalStackLayout>
    </ContentPage.Content>

</ContentPage>
