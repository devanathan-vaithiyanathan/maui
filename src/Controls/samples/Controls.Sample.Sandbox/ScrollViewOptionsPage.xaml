<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.ScrollViewOptionsPage"
             Title="ScrollViewOptionsPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Apply"
                     Clicked="ApplyButton_Clicked"
                     AutomationId="Apply"/>
    </ContentPage.ToolbarItems>
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
          ColumnDefinitions="Auto,Auto"
          ColumnSpacing="10"
          RowSpacing="15"
          Margin="10,10,0,0">

        <VerticalStackLayout Grid.Row="0"
                             Grid.ColumnSpan="2"
                             Spacing="10">
            <Label Text="Content"
                   FontSize="16"
                   FontAttributes="Bold"/>
            <HorizontalStackLayout Spacing="10">
                <Button Text="Editor"
                        Clicked="OnContentTypeButtonClicked"
                        WidthRequest="150"
                        AutomationId="ContentEditor"/>
                <Button Text="AbsoluteLayout"
                        IsVisible="False"
                        Clicked="OnContentTypeButtonClicked"
                        WidthRequest="150"
                        AutomationId="ContentAbsoluteLayout"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </Grid>
</ContentPage>