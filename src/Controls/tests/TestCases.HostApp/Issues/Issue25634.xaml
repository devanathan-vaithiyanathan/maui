<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue25634">
  <ContentPage.Content>
      <VerticalStackLayout Padding="30,0" Spacing="25">
            <Picker x:Name="picker" ItemDisplayBinding="{Binding LastName}" ItemsSource="{Binding People}"/>
            <Button Text="Click" AutomationId="PickerButton" Clicked="Button_Clicked"/>
       </VerticalStackLayout>
  </ContentPage.Content>
</ContentPage>
