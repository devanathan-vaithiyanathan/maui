<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue30535"
             Title="Issue 30535">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Options"
                     Clicked="OnNavigateToControlPageClicked"
                     AutomationId="OptionsButton"/>
    </ContentPage.ToolbarItems>

    <RefreshView x:Name="refreshView"
                 IsRefreshing="{Binding IsRefreshing, Mode=TwoWay}"
                 RefreshColor="Red"
                 AutomationId="RefreshView">
        <ScrollView>
            <VerticalStackLayout Spacing="20" Padding="20">
                <Label Text="Pull down to refresh this content"
                       FontSize="18"
                       HorizontalOptions="Center"
                       AutomationId="InstructionLabel"/>

                <Label Text="{Binding IsRefreshing, StringFormat='IsRefreshing: {0}'}"
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="Blue"
                       AutomationId="StatusLabel"/>

                <BoxView Color="Green"
                         HeightRequest="100"
                         WidthRequest="200"
                         HorizontalOptions="Center"
                         AutomationId="BoxContent"/>
            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
