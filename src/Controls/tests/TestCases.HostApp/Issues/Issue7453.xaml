<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.Controls.Sample.Issues.Issue7453"
             FlyoutBehavior="Disabled"
             Title="Issue7453">
    <TabBar AutomationId="tabbar">
        <Tab Title="Nested Tabs">
            <ShellContent x:Name="tab" Title="Home">
                <ContentPage>
                    <Button Text="Hello" AutomationId="ShellContentButton" VerticalOptions="Center" HorizontalOptions="Center" WidthRequest="100" HeightRequest="40" Clicked="OnButtonClicked"/>
                </ContentPage>
            </ShellContent>

            <ShellContent Title="Settings">
                <ContentPage>
                    <Label Text="This is Settings page"/>
                </ContentPage>
            </ShellContent>
        </Tab>
    </TabBar>

</Shell>